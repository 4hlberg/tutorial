[
    {
        "_id": "customer-system",
        "type": "system:url",
        "base_url": "http://YOUR-IP-HERE:8000/customers/"
    },
    {
        "_id": "customers",
        "type": "pipe",
        "source": {
            "type": "json",
            "system": "customer-system",
            "url": "customers.json"
        }
    },
    {
        "_id": "order-system",
        "type": "system:url",
        "base_url": "http://YOUR-IP-HERE:8000/orders/"
    },
    {
        "_id": "orders",
        "type": "pipe",
        "source": {
            "type": "json",
            "system": "order-system",
            "url": "orders.json"
        }
    },
    {
        "_id": "customers-with-orders",
        "type": "pipe",
        "source": {
            "type": "dataset",
            "dataset": "customers"
        },
        "transform": {
            "type": "dtl",
            "rules": {
                "default": [
                    ["add", "type", "customer"],
                    ["add", "name", ["concat", ["list", "_S.first_name", " ", "_S.last_name"]]],
                    ["add", "orders", ["apply", "order", ["hops", {
                        "datasets": ["orders o"],
                        "where": [
                            ["eq", "_S._id", "o.customer_id"]
                        ]
                    }]]],
                    ["add", "order_count", ["count", "_T.orders"]],
                    ["add", "total", ["sum", ["map", "_.total", "_T.orders"]]],
                    ["filter", ["gt", "_T.total", 25.00]]
                ],
                "order": [
                    ["copy", "items"],
                    ["copy", "discount"],
                    ["add", "total",
                     ["minus",
                      ["coalesce", ["list", "_S.discount", 0]],
                      ["sum", ["map", ["multiply", "_.quantity", "_.price"], "_S.items"]]]]
                ]
            }
        }
    }
]
