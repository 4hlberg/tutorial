  {
    "_id": "erp-orders",
    "type": "pipe",
    "source": {
      "type": "embedded",
      "entities": [{
        "_id": "erp-orders:1000",
        "erp-orders:customer_id": "~:erp-customers:11",
        "erp-orders:discount": "~f4.2",
        "erp-orders:items": [{
